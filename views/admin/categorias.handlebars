<h2>Lista de categorias</h2>
<hr>
<a href="/admin/addcategorias"><button class="btn btn-sucess"> Nova categoria </button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4> {{nome}} </h4>
            <small> Slug: {{slug}} </small> <br>
            <small> Data de criacao: {{date}} </small> <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-sucess mt-4">Editar a categoria</button></a>
        </div>
    </div>
{{else}}

{{/each}}